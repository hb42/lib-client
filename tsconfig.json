{
  "compilerOptions": {
    "target": "ES6",
    "baseUrl": ".",
    "declaration": true,
    "stripInternal": false,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./lib",
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "div",
    "dist",
    "lib",
    "tmp"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": false,
    "genDir": "tmp"
  }
}
